<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NovaMicrobacia">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/topArea"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/azul_claro"
                >

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="96dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/chuva"
                    android:id="@+id/chuvamenu"
                    />

                <TextView
                    android:id="@+id/microbaciasmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Microbacias"
                    android:textColor="@android:color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/chuvamenu"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nova Microbacia"
                android:textSize="36sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="-75dp"
                />

            <EditText
                android:id="@+id/editNomeProprietario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nome do Proprietário"
                android:background="@color/azul_superclaro"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:gravity="center"
                android:padding="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:elevation="7dp"/>

            <EditText
                android:id="@+id/editCpf"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="CPF do Proprietário"
                android:background="@color/azul_superclaro"
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="11"
                android:gravity="center"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:elevation="7dp"/>

            <EditText
                android:id="@+id/editCep"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="CEP"
                android:background="@color/azul_superclaro"
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="8"
                android:gravity="center"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:elevation="7dp"/>

            <EditText
                android:id="@+id/editRua"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Rua"
                android:background="@color/azul_superclaro"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:elevation="7dp"/>

            <EditText
                android:id="@+id/editNumero"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Número"
                android:background="@color/azul_superclaro"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:elevation="7dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/telhado"
                android:layout_marginTop="20dp"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:columnCount="3"
                android:padding="5dp">

                <EditText
                    android:id="@+id/editaltura"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:elevation="7dp"
                    android:gravity="center"
                    android:hint="Altura (m)"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/editangulo"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@color/white"
                    android:layout_margin="10dp"
                    android:elevation="7dp"
                    android:gravity="center"
                    android:hint="Ângulo (º)"
                    android:inputType="number"
                    />

                <EditText
                    android:id="@+id/editlargura"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:background="@color/white"
                    android:elevation="7dp"
                    android:gravity="center"
                    android:hint="Largura (m)"
                    android:inputType="number"
                    android:layout_margin="10dp" />
            </GridLayout>

            <!--Como capturar a informação que o usuário inputa dentro da caixa de texto?-->

            <Button
                android:id="@+id/btcalcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/azul_roial"
                android:padding="10dp"
                android:text="Calcular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="15dp" />

            <TextView
                android:id="@+id/volumeMicrobacia"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:background="@color/azul_claro"
                android:elevation="7dp"
                android:gravity="center"
                android:hint="Volume da Microbacia (m³) "
                android:padding="15dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btsalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/azul_roial"
                android:padding="10dp"
                android:text="Salvar"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="15dp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/estacio"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:textSize="12sp"
                android:textColor="@color/azul_roial"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>


<!--</LinearLayout>-->

  </androidx.constraintlayout.widget.ConstraintLayout>